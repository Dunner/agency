.wrapper
  position relative
  width 100%
  height 100%
  transition width 0.3s
  border 20px solid white
  &:after
    content ''
    display block
    clear both
  & .navwrapper
    transition height 0.3s
    position relative
    width 100%
    height 100%
  .businesscard
    width 100%
    height 50%
    postion relative
    background #cecece
    transition all 0.3s
    overflow hidden
    background-image url('http://ac85602.thg.se/Bilder/Background_2.png')
    &:after
      position absolute
      bottom 0px
      height 50%
      width 100%
      left 0px
      background rgba(0,0,0,.3)
      content ''
      display block
  .navigation
    position relative
    height 60px
    width 100%
    margin 0 auto
    transition all 0.3s ease-in-out
    &:after
      content ''
      display block
      clear both
    .minilogo
      width 120px
      height 100%
      float left
      transition all 0.3s ease-in-out
    nav
      position relative
      height 100%
      width 100%
      float left
      transition all 0.3s ease-in-out
      &.options
        position relative
        width 100%
        display table
        height 100%
        table-layout fixed
        & > ul
          margin 0
          padding 0
          display table-row
          & > li
            border-collapse collapse
            list-style none
            cursor pointer
            height 100%
            display table-cell
            & > div
              width 100%
              text-align center
              height 100%


.maincontent
  min-height 1000px
  background #fff
  padding 10px
  border-top 0px solid #ddd

.card
  background #111
  .navigation
    width 50% !important
    height 50% !important
  nav
    & > ul > li
      & > div
        border 0px !important
        border-radius 0px !important
        & > a
          display block
          text-decoration none
          color #888
          line-height 60px

.ui
  background-color #fff
  & .navwrapper
    height 60px!important
  nav
    width calc(100% - 120px) !important
    & > ul > li
      & > div
        background linear-gradient(top, #fff, #f6f6f6)
        border-right 2px solid #ddd
        border-top 2px solid #ddd
        border-bottom 2px solid #ddd
        border-top-left-radius 5px
        border-top-right-radius 5px
      &:first-child > div
        border-left 2px solid #ddd
      & > div > a
        display block
        text-decoration none
        color #888
        line-height 60px
      &.active > div
        background #fff
        border-bottom 0px
        & > a
          color #444
  .businesscard
    opacity 0
    height 0px
  .maincontent
    border-right 0px solid black
    width 100% !important
  .active > div
    border-top 2px solid #3293CD !important